<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/j2e"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>servlets.Accueil</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/</url-pattern>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AjouterVille</servlet-name>
		<servlet-class>servlets.AjouterVille</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AjouterVille</servlet-name>
		<url-pattern>/ajouterVille</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ModifierVille</servlet-name>
		<servlet-class>servlets.ModifierVille</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ModifierVille</servlet-name>
		<url-pattern>/modifierVille</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SupprimerVille</servlet-name>
		<servlet-class>servlets.SupprimerVille</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SupprimerVille</servlet-name>
		<url-pattern>/supprimerVille</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CalculerDistanceVilles</servlet-name>
		<servlet-class>servlets.CalculerDistanceVilles</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CalculerDistanceVilles</servlet-name>
		<url-pattern>/calculerDistanceVilles</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>

</web-app>